{
	email {$ACME_EMAIL}
	on_demand_tls {
		ask {$APORTO_ON_DEMAND_CHECK}
	}
}

:80 {
	redir https://{host}{uri} permanent
}

https://{$APORTO_CONTROL_DOMAIN} {
	reverse_proxy aporto-server:9090
}

:443 {
	tls {
		on_demand
	}

	@tunnels host *.{$APORTO_TUNNEL_DOMAIN}
	handle @tunnels {
		reverse_proxy aporto-server:8080
	}

	handle {
		respond "aporto: host not registered" 404
	}
}
